<Window x:Class="Laba5_sem2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba5_sem2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBox Name="tbOutput" Height="250" Width="288" Canvas.Top="30" Canvas.Left="150"/>
        <TextBox Name="tbMessage" Height="121" Width="102" Canvas.Top="159" Canvas.Left="43"/>
        <TextBox Name="tbPort"  Width="102" Canvas.Top="104" Canvas.Left="43"/>

        <Button Name="bStop" Content="stop Server" Click="bStop_Click"  Canvas.Top="54" Canvas.Left="43" Width="102"/>
        <Button Name="bStart" Content="start Server" Click="bStart_Click"  Canvas.Top="30" Canvas.Left="43" Width="102"/>

        <TextBlock Canvas.Left="43" TextWrapping="Wrap" Text="Message: " Canvas.Top="139" />
        <TextBlock Canvas.Left="43" TextWrapping="Wrap" Text="Port: " Canvas.Top="86" />
        <TextBlock Canvas.Left="150" TextWrapping="Wrap" Text="Server logs: " Canvas.Top="10" />
    </Canvas>
</Window>
